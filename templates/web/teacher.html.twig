                    <td>
                        {{ form(form) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ "teacherZone.groups.noOneAvailableForImport"|trans }}</p>
    {% endif %}
</details>
{% endblock %}

