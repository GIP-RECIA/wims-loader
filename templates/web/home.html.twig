{# templates/web/home.html.twig #}
{% extends 'web/base.html.twig' %}

{% block body %}
<details open>
    <summary>{{ "home.title"|trans }}</summary>
    <p>
        {% if is_granted('ROLE_ENS') %}
        {{ "home.accessToTeacherZone"|trans }} : <a href="{{ path('teacher') }}">{{ "menu.teacherZone"|trans }}</a><br>
        {% endif %}
        {% if is_granted('ROLE_ELV') %}
        {{ "home.accessToStudentZone"|trans }} : <a href="{{ path('student') }}">{{ "menu.studentZone"|trans }}</a><br>
        {% endif %}
        {% if is_granted('ROLE_ENS') %}
        {{ "home.accessToStudentZone"|trans }} : <a href="{{ path('student') }}">{{ "menu.studentZone"|trans }}</a><br>
        {% endif %}
    </p>
</details>
{% endblock %}