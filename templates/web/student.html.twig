{# templates/web/student.html.twig #}
{% extends 'web/baseWithGroupingClasses.html.twig' %}
{% set title_page = "menu.studentZone"|trans %}

{% block body %}
<details open>
    <summary>Vos classes</summary>
    {% if classes|length > 0 %}
    <table id="myClasses" class="wimstable" style="text-align:center">
        <caption>Mes classes</caption>
        <thead>
            <tr data-sort-method="thead">
                <th scope="col" role="columnheader">{{ "tableaHeader.name"|trans }}</th>
                <th scope="col" role="columnheader">{{ "tableaHeader.subjects"|trans }}</th>
                <th scope="col" role="columnheader">{{ "tableaHeader.teacher"|trans }}</th>
                <th scope="col" role="columnheader">{{ "tableaHeader.action"|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for class in classes %}
            <tr class="{% if loop.index is even %}even{% else %}odd{% endif %}">
                <td>
                    {{ class.name }}
                </td>
                <td>
                    {{ class.subjects }}
                </td>
                <td>
                    {{ class.teacher.lastName }}
                </td>
                <td>
                    <a href="{{ class|wims_url_class_for_student }}" class="wims_button" role="button">{{ "button.enter"|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <br>
    {{ "studentZone.notRegisteredInWimsClass"|trans }}
    {% endif %}
</details>
{% endblock %}

{% block endjs %}
    <script src="/wims/scripts/js/tablesort.js"></script>
    <script src="/wims/scripts/js/tablesort.number.js"></script>

    <script>
    new Tablesort(document.getElementById("myClasses"));
    </script>
{% endblock %}